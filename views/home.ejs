        /* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Light Theme Color Palette - HSL Values */
    --background: 0 0% 100%; /* Pure white background */
    --foreground: 220 20% 20%; /* Darker gray for text */
    --card: 0 0% 100%; /* White cards */
    --card-foreground: 220 20% 20%; /* Dark text for cards */
    --primary: 214 80% 50%; /* Bright blue for primary elements */
    --primary-foreground: 0 0% 100%; /* White for text on primary */
    --primary-glow: 214 80% 60%; /* Lighter blue for gradients */
    --secondary: 210 30% 95%; /* Light gray for secondary elements */
    --secondary-foreground: 220 20% 30%; /* Slightly darker gray for secondary text */
    --muted: 210 20% 97%; /* Very light gray for muted backgrounds */
    --muted-foreground: 220 15% 50%; /* Medium gray for muted text */
    --accent: 140 60% 45%; /* Soft green for accents */
    --accent-foreground: 0 0% 100%; /* White for accent text */
    --destructive: 0 70% 50%; /* Red for errors */
    --destructive-foreground: 0 0% 100%; /* White for destructive text */
    --border: 210 20% 90%; /* Light gray border */
    --input: 210 20% 90%; /* Light gray for inputs */
    --ring: 214 80% 50%; /* Blue for focus rings */
    --radius: 0.5rem; /* Softer border radius */
    
    /* Custom Design Tokens */
    --gradient-primary: linear-gradient(135deg, hsl(var(--primary)), hsl(var(--primary-glow)));
    --gradient-hero: linear-gradient(135deg, hsl(214 80% 50%) 0%, hsl(140 60% 45%) 100%);
    --shadow-soft: 0 2px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    --shadow-medium: 0 4px 12px rgba(0, 0, 0, 0.15); /* Slightly stronger shadow */
    --transition-smooth: all 0.3s ease-in-out;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    z-index: 10;
}

/* Utility Classes */
.text-gradient {
    background: var(--gradient-hero);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hover-scale {
    transition: transform var(--transition-smooth);
}

.hover-scale:hover {
    transform: scale(1.03);
}

.hover-lift {
    transition: transform var(--transition-smooth);
}

.hover-lift:hover {
    transform: translateY(-4px);
}

/* Animations */
@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
}

@keyframes fade-in {
    0% { opacity: 0; transform: translateY(10px); }
    100% { opacity: 1; transform: translateY(0); }
}

@keyframes bounce-in {
    0% {
        opacity: 0;
        transform: scale(0.3);
    }
    50% {
        opacity: 1;
        transform: scale(1.05);
    }
    70% {
        transform: scale(0.9);
    }
    100% {
        transform: scale(1);
    }
}

.animate-float {
    animation: float 3s ease-in-out infinite;
}

.animate-fade-in {
    animation: fade-in 0.5s ease-out;
}

.animate-bounce-in {
    animation: bounce-in 0.5s ease-out;
}

/* Header */
.header {
    position: sticky;
    top: 0;
    z-index: 50;
    border-bottom: 1px solid hsl(var(--border));
    background-color: hsl(var(--background) / 0.95);
    backdrop-filter: blur(6px);
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: hsl(var(--foreground));
}

.logo-icon {
    background: var(--gradient-hero);
    padding: 0.5rem;
    border-radius: var(--radius);
    color: hsl(var(--primary-foreground));
}

.logo-text {
    font-size: 1.25rem;
    font-weight: bold;
}

.nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.nav-link {
    text-decoration: none;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    transition: color var(--transition-smooth);
}

.nav-link:hover,
.nav-link.active {
    color: hsl(var(--primary));
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: var(--transition-smooth);
    font-size: 0.875rem;
}

.btn-lg {
    padding: 0.75rem 1.5rem;
    font-size: 1rem;
}

.btn-full {
    width: 100%;
}

.btn-hero {
    background: var(--gradient-hero);
    color: hsl(var(--primary-foreground));
    border: none;
}

.btn-hero:hover {
    opacity: 0.9;
    transform: translateY(-2px);
}

.btn-outline {
    background: transparent;
    color: hsl(var(--foreground));
    border: 1px solid hsl(var(--border));
}

.btn-outline:hover {
    background: hsl(var(--muted));
}

/* Pages */
.page {
    display: none;
    min-height: calc(100vh - 4rem);
}

.page.active {
    display: block;
}

.page-header {
    text-align: center;
    margin-bottom: 2rem;
    padding: 2rem 0;
}

.page-header h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.page-header p {
    font-size: 1.125rem;
    color: hsl(var(--muted-foreground));
    max-width: 48rem;
    margin: 0 auto;
}

/* Hero Section */
.hero {
    position: relative;
    background: url('./assets/HeroBackground1.png') center/cover no-repeat;
    background-size: 100% auto, cover;
    padding: 15rem 0;
    color: hsl(var(--foreground));
    z-index: 2;
}

.wave1 {
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    z-index: -1;
    pointer-events: none;
}

.hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: #e4f4ff55;
    z-index: -1;
}

.hero-content {
    display: flex;
    align-items: center;
}

.hero-text {
    margin: 2rem;
}

.hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.75rem;
    background: hsl(var(--secondary));
    color: hsl(var(--secondary-foreground));
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: bold;
    line-height: 1.1;
    margin-bottom: 1rem;
}

.hero-description {
    font-size: 1.25rem;
    color: hsl(var(--muted-foreground));
    max-width: 32rem;
    margin-bottom: 2rem;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
}

.stats {
    display: flex;
    flex-wrap: nowrap;
    gap: 3rem;
    justify-content: center;
}

.stat {
    background: rgba(126, 211, 177, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 2rem 1.3rem;
    border-radius: 1.25rem;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat:hover {
    transform: translateY(-10px) scale(1.05);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: hsl(var(--primary));
    margin-bottom: 0.5rem;
}

.stat-label {
    font-size: 1rem;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    letter-spacing: 0.5px;
}

.hero-image {
    position: relative;
}

.hero-img {
    width: 100%;
    border-radius: var(--radius);
    box-shadow: var(--shadow-medium);
}

.hero-overlay {
    position: absolute;
    inset: 0;
    background: var(--gradient-hero);
    opacity: 0.08;
    border-radius: var(--radius);
}

/* Features Section */
.features {
    padding: 0;
    background: hsl(var(--muted) / 0.2);
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-header h2 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
}

.section-header p {
    font-size: 1.25rem;
    color: hsl(var(--muted-foreground));
    max-width: 48rem;
    margin: 0 auto;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    z-index: 2;
}

.feature-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    padding: 2rem;
    text-align: center;
    box-shadow: var(--shadow-soft);
    transition: var(--transition-smooth);
}

.feature-card:hover {
    box-shadow: var(--shadow-medium);
    transform: translateY(-4px);
    background: hsl(var(--secondary));
}

.feature-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: hsl(var(--muted));
    border-radius: 50%;
    margin-bottom: 1rem;
    font-size: 1.5rem;
    color: hsl(var(--primary));
    transition: var(--transition-smooth);
}

.feature-card:hover .feature-icon {
    background: hsl(var(--primary) / 0.1);
}

.feature-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.feature-card:hover h3 {
    color: hsl(var(--primary));
}

.feature-card p {
    color: hsl(var(--muted-foreground));
}

/* How It Works Section */
.how-it-works {
    padding: 5rem 0;
    background: hsl(var(--muted) / 0.2);
}

.steps {
    display: flex;
    flex-wrap: nowrap;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
}

.step-card {
    flex: 0 0 250px;
    height: 250px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    box-shadow: var(--shadow-soft);
    transition: var(--transition-smooth);
    overflow: hidden;
}

.step-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: var(--radius);
}

.step-card:hover {
    box-shadow: var(--shadow-medium);
    transform: translateY(-4px);
    background: hsl(var(--secondary));
}

/* Reviews Section */
.reviews {
    padding: 5rem 0;
    background: hsl(var(--muted) / 0.2);
}

.reviews-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
}

.review-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    padding: 2rem;
    text-align: center;
    box-shadow: var(--shadow-soft);
    transition: var(--transition-smooth);
}

.review-card:hover {
    box-shadow: var(--shadow-medium);
    transform: translateY(-4px);
    background: hsl(var(--secondary));
}

.review-stars {
    margin-bottom: 1rem;
    color: hsl(var(--accent));
}

.review-text {
    font-style: italic;
    color: hsl(var(--muted-foreground));
    margin-bottom: 1rem;
}

.review-author {
    font-weight: 600;
    color: hsl(var(--foreground));
}

/* Pricing Section */
.pricing {
    padding: 5rem 0;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 64rem;
    margin: 0 auto;
}

.pricing-card {
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    padding: 2rem;
    box-shadow: var(--shadow-soft);
    position: relative;
}

.pricing-card.popular {
    border-color: hsl(var(--primary));
    box-shadow: var(--shadow-medium);
}

.popular-badge {
    position: absolute;
    top: -0.5rem;
    left: 50%;
    transform: translateX(-50%);
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius);
    font-size: 0.875rem;
    font-weight: 600;
}

.pricing-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-align: center;
}

.price {
    text-align: center;
    font-size: 2rem;
    font-weight: bold;
    color: hsl(var(--primary));
    margin-bottom: 1.5rem;
}

.price span {
    font-size: 1rem;
    font-weight: normal;
}

.features-list {
    list-style: none;
    space-y: 0.5rem;
}

.features-list li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
}

.features-list i {
    color: hsl(var(--accent));
}

.pricing-cta {
    text-align: center;
    margin-top: 3rem;
}

/* Footer */
.footer {
    padding: 3rem 0;
    background: hsl(var(--muted));
    border-top: 1px solid hsl(var(--border));
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: bold;
    color: hsl(var(--foreground));
}

.footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.footer-links a {
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    transition: color var(--transition-smooth);
}

.footer-links a:hover {
    color: hsl(var(--primary));
}

.footer-contact {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.contact-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: hsl(var(--muted-foreground));
    text-decoration: none;
    transition: color var(--transition-smooth);
}

.contact-link:hover {
    color: hsl(var(--primary));
}

.footer-social {
    display: flex;
    gap: 1rem;
}

.footer-social a {
    color: hsl(var(--muted-foreground));
    font-size: 1.25rem;
    transition: color var(--transition-smooth);
}

.footer-social a:hover {
    color: hsl(var(--primary));
}

.footer-bottom {
    text-align: center;
    font-size: 0.875rem;
    color: hsl(var(--muted-foreground));
}

@keyframes slideIn {
    from {
        transform: translateX(100%);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

