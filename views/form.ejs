.form-card .form-group{display:flex; flex-direction:column; margin-bottom:1rem;}
.form-card .form-group label{margin-bottom:0.5rem; font-weight:500;}
.form-card .form-group input, .form-card .form-group select{padding:0.75rem 1rem; border:1px solid hsl(var(--border)); border-radius:var(--radius); font-size:1rem;}
.price-display{font-size:1.25rem;font-weight:600; margin-top:1rem; color:hsl(var(--primary)); text-align:right;}
.btn-submit{width:100%; background:var(--gradient-hero); color:hsl(var(--primary-foreground)); border:none; padding:0.75rem 1rem; border-radius:var(--radius); font-weight:600; margin-top:1rem; cursor:pointer; transition:var(--transition-smooth);}
.btn-submit:hover{opacity:0.9; transform:translateY(-2px);}
</style>
</head>
