<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('submission-form');
        const pagesSelect = document.getElementById('pages');
        const deliverySelect = document.getElementById('delivery');
        const aiCheck = document.getElementById('aiCheck');
        const calcPages = document.getElementById('calc-pages');
        const calcRate = document.getElementById('calc-rate');
        const calcBase = document.getElementById('calc-base');
        const calcDelivery = document.getElementById('calc-delivery');
        const calcAi = document.getElementById('calc-ai');
        const calcTotal = document.getElementById('calc-total');
        const hiddenPrice = document.getElementById('hidden-price');
        const submitBtn = document.getElementById('submit-btn');
        const loader = document.getElementById('loader');

        function calculatePrice() {
            const pages = parseInt(pagesSelect.value);
            let rate = 2;
            if (pages > 100 && pages <= 500) rate = 1.5;
            else if (pages >= 1000) rate = 1;
            const base = pages * rate;
            let multiplier = 1;
            const delivery = deliverySelect.value;
            if (delivery === 'instant') multiplier = 1.5;
            else if (delivery === '1-day') multiplier = 1.2;
            const ai = aiCheck.checked ? 39 : 0;
            const total = (base * multiplier) + ai;

            calcPages.textContent = pages;
            calcRate.textContent = `₹${rate.toFixed(2)}`;
            calcBase.textContent = `₹${base.toFixed(2)}`;
            calcDelivery.textContent = `${multiplier.toFixed(1)}x`;
            calcAi.textContent = `₹${ai.toFixed(2)}`;
            calcTotal.textContent = `₹${total.toFixed(2)}`;
            hiddenPrice.value = total.toFixed(2);
        }

        pagesSelect.addEventListener('change', calculatePrice);
        deliverySelect.addEventListener('change', calculatePrice);
        aiCheck.addEventListener('change', calculatePrice);
        calculatePrice();

        // Document Upload Handling
        const fileInput = document.getElementById('file');
        const fileUpload = document.getElementById('file-upload');
        const uploadSuccess = document.querySelector('#file-upload .upload-success');
        const uploadText = document.querySelector('#file-upload .upload-text');

        fileUpload.addEventListener('click', () => {
            fileInput.click();
        });

        fileInput.addEventListener('change', () => {
            if (fileInput.files.length > 0) {
                fileUpload.classList.add('has-file');
                uploadSuccess.style.display = 'block';
                uploadText.textContent = fileInput.files[0].name;
            }
        });

        fileUpload.addEventListener('dragover', (e) => {
            e.preventDefault();
            fileUpload.classList.add('hover');
        });

        fileUpload.addEventListener('dragleave', () => {
            fileUpload.classList.remove('hover');
        });

        fileUpload.addEventListener('drop', (e) => {
            e.preventDefault();
            fileUpload.classList.remove('hover');
            fileInput.files = e.dataTransfer.files;
            if (fileInput.files.length > 0) {
                fileUpload.classList.add('has-file');
                uploadSuccess.style.display = 'block';
                uploadText.textContent = fileInput.files[0].name;
            }
        });

        // Payment Screenshot Upload Handling
        const paymentInput = document.getElementById('payment');
        const paymentUpload = document.getElementById('payment-upload');
        const paymentSuccess = document.querySelector('#payment-upload .upload-success');
        const paymentText = document.querySelector('#payment-upload .upload-text');

        paymentUpload.addEventListener('click', () => {
            paymentInput.click();
        });

        paymentInput.addEventListener('change', () => {
            if (paymentInput.files.length > 0) {
                paymentUpload.classList.add('has-file');
                paymentSuccess.style.display = 'block';
                paymentText.textContent = paymentInput.files[0].name;
            }
        });

        paymentUpload.addEventListener('dragover', (e) => {
            e.preventDefault();
            paymentUpload.classList.add('hover');
        });

        paymentUpload.addEventListener('dragleave', () => {
            paymentUpload.classList.remove('hover');
        });

        paymentUpload.addEventListener('drop', (e) => {
            e.preventDefault();
            paymentUpload.classList.remove('hover');
            paymentInput.files = e.dataTransfer.files;
            if (paymentInput.files.length > 0) {
                paymentUpload.classList.add('has-file');
                paymentSuccess.style.display = 'block';
                paymentText.textContent = paymentInput.files[0].name;
            }
        });

        // Form submission with debugging
        form.addEventListener('submit', (e) => {
            e.preventDefault(); // Prevent default submission for debugging
            submitBtn.disabled = true;
            loader.style.display = 'flex';
            const formData = new FormData(form);
            console.log('Form data to be sent:');
            for (let [key, value] of formData.entries()) {
                console.log(`${key}: ${value instanceof File ? value.name : value}`);
            }
            // Submit the form
            fetch('/send', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) throw new Error('Network response was not ok');
                return response.text();
            })
            .then(data => {
                document.body.innerHTML = data; // Display confirmation page
                // Show modal (optional, since confirmation page is shown)
                const modal = document.getElementById('confirmation-modal');
                if (modal) modal.classList.add('show');
            })
            .catch(error => {
                console.error('Form submission error:', error);
                alert('Error submitting form: ' + error.message);
                loader.style.display = 'none';
                submitBtn.disabled = false;
            });
        });
    });

    function closeModal() {
        document.getElementById('confirmation-modal').classList.remove('show');
    }
</script>
